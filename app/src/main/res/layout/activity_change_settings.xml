<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cfeng.healthport.change_settings">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textSize="32sp"
        android:text="@string/settings" />

    <TextView
        android:id="@+id/email_name"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/new_email"
        android:layout_marginTop="211dp"
        android:text="@string/new_email"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/good_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/new_email"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        app:srcCompat="@drawable/green_check"
        android:contentDescription="@string/todo"
        android:focusable="true" />

    <TextView
        android:id="@+id/good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/good_icon"
        android:layout_toEndOf="@+id/settingsTitle"
        android:clickable="true"
        android:text="@string/good"
        android:textSize="20sp"
        android:textStyle="bold"
        android:focusable="true" />

    <TextView
        android:id="@+id/cancelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancelX"
        android:layout_marginStart="60dp"
        android:clickable="true"
        android:text="@string/cancel"
        android:textSize="18sp"
        android:focusable="true" />

    <ImageView
        android:id="@+id/cancelX"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/cancel_x"
        android:contentDescription="@string/todo"
        android:focusable="true" />

    <EditText
        android:id="@+id/new_email"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="228dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/old"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/email_name"
        android:layout_marginTop="117dp"
        android:text="@string/old_email" />

    <EditText
        android:id="@+id/old_email"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/settingsTitle"
        android:layout_below="@+id/old"
        android:layout_marginEnd="-100dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/email_name"
        android:layout_marginBottom="218dp"
        android:text="@string/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/settingsTitle"
        android:layout_below="@+id/pass"
        android:layout_marginEnd="-100dp"
        android:layout_marginTop="-218dp"
        android:ems="10"
        android:inputType="textPassword" />


</RelativeLayout>