<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cfeng.healthport.change_settings">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="32sp"
        android:text="@string/settings" />


    <ImageView
        android:id="@+id/good_icon"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settingsTitle"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        app:srcCompat="@mipmap/green_check"
        android:contentDescription="@string/todo"
        android:focusable="true"/>

    <TextView
        android:id="@+id/good"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/good_icon"
        android:layout_toEndOf="@+id/good_icon"
        android:layout_marginLeft="10dp"
        android:text="@string/good"
        android:textStyle="bold"
        android:textSize="20sp"
        android:focusable="true"/>

    <TextView
        android:id="@+id/cancelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancelX"
        android:layout_toEndOf="@+id/cancelX"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:text="@string/cancel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:focusable="true" />

    <ImageView
        android:id="@+id/cancelX"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        app:srcCompat="@mipmap/cancel_x"
        android:contentDescription="@string/todo"
        android:focusable="true" />


    <TextView
        android:id="@+id/email_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/old"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="40dp"
        android:text="@string/new_email"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/new_email"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/old_email"
        android:layout_alignBaseline="@+id/email_name"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:layout_alignStart="@+id/email_name"
        android:textSize="16sp"
        android:text="@string/old_email" />

    <EditText
        android:id="@+id/old_email"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/old"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/email_name"
        android:layout_marginTop="85dp"
        android:layout_alignStart="@+id/email_name"
        android:textSize="16sp"
        android:text="@string/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pass"
        android:layout_alignStart="@+id/old_email"
        android:ems="10"
        android:inputType="textPassword" />


</RelativeLayout>