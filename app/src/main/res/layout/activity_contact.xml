<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cfeng.healthport.contacts_home">


    <TextView
        android:id="@+id/backText"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/backArrow"
        android:layout_toEndOf="@+id/backArrow"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/backText"
        android:textStyle="bold"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/backArrow"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/back_arrow"
        android:contentDescription="back arrow icon" />

    <TextView
        android:id="@+id/name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:textSize="28sp"
        android:text="@string/common_open_on_phone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/main_content"
        android:layout_marginBottom="5dp"
        android:background="#D6E8F0"/>

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name_value"
        android:layout_marginTop="75dp">

        <TextView
            android:id="@+id/fax_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Fax Number"/>

        <TextView
            android:id="@+id/fax_number_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:text="@string/common_open_on_phone"/>
    </LinearLayout>


    <TextView
        android:id="@+id/change_contact_text"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="30dp"
        android:text="Change?"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/change_contact_icon"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/change_contact_text"
        android:layout_alignTop="@+id/change_contact_text"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/pencil"/>

    <TextView
        android:id="@+id/delete_contact_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/change_contact_text"
        android:layout_toStartOf="@+id/delete_contact_icon"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:text="Delete?"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/delete_contact_icon"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/delete_contact_text"
        app:srcCompat="@drawable/trashcan"/>

</RelativeLayout>