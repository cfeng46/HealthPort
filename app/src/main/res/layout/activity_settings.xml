<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cfeng.healthport.settings">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:textSize="32sp"
        android:text="@string/settings" />

    <TextView
        android:id="@+id/backText"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/backArrow"
        android:layout_marginStart="60dp"
        android:text="@string/backText"
        android:textSize="18sp"
        android:textStyle="bold"
        android:focusable="true" />

    <ImageView
        android:id="@+id/backArrow"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/back_arrow"
        android:contentDescription="@string/todo"
        android:focusable="true" />



    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settingsTitle"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="60dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/email"/>

    <TextView
        android:id="@+id/email_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignStart="@+id/password_value"
        android:textSize="18sp"
        android:text="@string/common_open_on_phone"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/change_email"
        android:layout_marginTop="90dp"
        android:layout_alignStart="@+id/email"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/password"/>

    <TextView
        android:id="@+id/password_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/password"
        android:layout_toEndOf="@+id/password"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:text="@string/common_open_on_phone"/>

    <ImageView
        android:id="@+id/change_email_icon"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/change_email"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/email"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/pencil"/>

    <TextView
        android:id="@+id/change_email"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/change_email_icon"
        android:layout_marginLeft="115dp"
        android:text="Change?"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/change_password_icon"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/change_password"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/password"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/pencil"/>

    <TextView
        android:id="@+id/change_password"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/change_password_icon"
        android:layout_marginLeft="115dp"
        android:text="Change?"
        android:textStyle="bold"
        android:textSize="16sp"
        />



</RelativeLayout>