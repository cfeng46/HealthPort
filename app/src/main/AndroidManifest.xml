        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main_page" />
        <activity android:name=".register" />
        <activity android:name=".profile" />
        <activity android:name=".uploads" />
        <activity android:name=".documents" />
        <activity android:name=".share" />
        <activity android:name=".contacts" />
        <activity android:name=".inbox" />
        <activity android:name=".forget_password" />
        <activity android:name=".capture" />
